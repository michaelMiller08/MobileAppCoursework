<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Border -->
    <item>
        <shape>
            <solid android:color="#000000" />
        </shape>
    </item>

    <!-- Main content background -->
    <item
        android:left="1dp"
        android:right="1dp"
        android:top="1dp"
        android:bottom="1dp">
        <shape>
            <solid android:color="#FFFFFF" />
        </shape>
    </item>
</layer-list>